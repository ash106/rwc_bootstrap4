<div class="container">
  <div class="row">
    <div class="col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
      <p>
        <strong>Volume:</strong>
        <%= @for_sale.volume %> ac-ft
      </p>

      <p>
        <strong>Source:</strong>
        <%= @for_sale.source %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @for_sale.description %>
      </p>

      <p>
        <strong>Price:</strong>
        $<%= @for_sale.price %>/ac-ft
      </p>

      <p>
        <strong>Contact info:</strong>
        <%= @for_sale.contact_info %>
      </p>

      <p>
        <strong>Listing area:</strong>
        <%= @for_sale.listing_area.name %>
      </p>

      <%= link_to 'Edit', edit_for_sale_path(@for_sale) %>
    </div>
  </div>
</div>
